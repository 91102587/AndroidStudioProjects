<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.textviewoutput02simplecalculator.MainActivity">

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTop"
        android:textAlignment="center"
        android:textSize="36sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num1"
            android:id="@+id/num1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num2"
            android:id="@+id/num2"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num3"
            android:id="@+id/num3"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num4"
            android:id="@+id/num4"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num5"
            android:id="@+id/num5"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num6"
            android:id="@+id/num6"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num7"
            android:id="@+id/num7"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num8"
            android:id="@+id/num8"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num9"
            android:id="@+id/num9"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num0"
            android:id="@+id/num0"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/plus_sign"
            android:id="@+id/plus_sign"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/minus_sign"
            android:id="@+id/minus_sign"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMiddle"
        android:textSize="36sp"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num1"
            android:id="@+id/num01"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num2"
            android:id="@+id/num02"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num3"
            android:id="@+id/num03"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num4"
            android:id="@+id/num04"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num5"
            android:id="@+id/num05"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num6"
            android:id="@+id/num06"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num7"
            android:id="@+id/num07"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num8"
            android:id="@+id/num08"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num9"
            android:id="@+id/num09"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/num0"
            android:id="@+id/num00"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/equal_sign"
            android:id="@+id/equal_sign"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBottom"
        android:textSize="36sp"
        android:textAlignment="center" />
</LinearLayout>
